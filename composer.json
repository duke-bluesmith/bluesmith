{
	"name": "bluesmith/bluesmith",
	"type": "project",
	"description": "3D print job management",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"bluesmith",
		"workflow",
		"management",
		"3d",
		"printing"
	],
	"homepage": "https://bluesmith.oit.duke.edu",
	"license": "Mozilla Public License Version 2.0",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "msg8@duke.edu",
			"homepage": "https://duke.edu",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.2",
		"almasaeed2010/adminlte": "^3.0",
		"codeigniter4/codeigniter4": "dev-develop",
		"components/jquery": "^3.3",
		"enyo/dropzone": "^5.5",
		"fortawesome/font-awesome": "^5.8",
		"myth/auth": "dev-develop",
		"nnnick/chartjs": "^2.8",
		"peekleon/datatables-all": "^1.10",
		"tatter/addins": "^2.0",
		"tatter/chat": "^1.0",
		"tatter/files": "^2.0",
		"tatter/forms": "dev-develop",
		"tatter/workflows": "^3.0",
		"tinymce/tinymce": "^5.0",
		"twbs/bootstrap": "^4.3",
		"league/commonmark": "^1.5"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"tatter/tools": "^1.1"
	},
	"autoload": {
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/codeigniter4"
		},
		{
			"type": "vcs",
			"url": "https://github.com/lonnieezell/myth-auth"
		},
		{
			"type": "vcs",
			"url": "https://github.com/tattersoftware/codeigniter4-forms"
		},
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"post-update-cmd": [
			"php spark assets:publish"
		],
		"analyze": "phpstan analyze",
		"style": "phpcbf --standard=./vendor/codeigniter4/codeigniter4-standard/CodeIgniter4 tests/ app/",
		"test": "phpunit"
	}
}
