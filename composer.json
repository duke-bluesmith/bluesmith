{
	"name": "bluesmith/bluesmith",
	"type": "project",
	"description": "3D print job management",
	"homepage": "https://bluesmith.oit.duke.edu",
	"license": "Mozilla Public License Version 2.0",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/codeigniter4"
		},
		{
			"type": "vcs",
			"url": "https://github.com/lonnieezell/myth-auth"
		},
		{
			"type": "vcs",
			"url": "https://github.com/tattersoftware/codeigniter4-forms"
		},
		{
			"type": "vcs",
			"url": "https://github.com/tattersoftware/codeigniter4-workflows"
		},
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
	],
	"require": {
		"php": ">=7.2",
		"codeigniter4/codeigniter4": "dev-develop",
		"myth/auth": "dev-develop",
		"tatter/forms": "dev-develop",
		"tatter/workflows": "dev-develop",
		"tatter/addins": "^1.3",
		"tatter/files": "^1.1",
		"twbs/bootstrap": "^4.3",
		"components/jquery": "^3.3",
		"enyo/dropzone": "^5.5",
		"fortawesome/font-awesome": "^5.8",
		"bower-asset/sbadmin2": "^4.0",
		"datatables/datatables": "^1.10",
		"nnnick/chartjs": "^2.8",
		"peekleon/datatables-all": "^1.10",
		"tinymce/tinymce": "^5.0"
	},
	"require-dev": {
		"mikey179/vfsstream": "1.6.*",
		"phpunit/phpunit": "^7.0",
		"mockery/mockery": "^1.0"
	},
	"autoload-dev": {
		"psr-4": {
			"ProjectTests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit",
		"post-update-cmd": [
			"@composer dump-autoload",
			"php spark assets:publish"
		]
	}
}
